  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "prettier --write ./src",
      "eslint  --fix"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
